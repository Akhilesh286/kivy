<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        padding:20
        spacing:20
        Label:
            text:"choose Pizza "
            font_size:32
        GridLayout:
            cols:2
            Label:
                text:"pepperoni"
                font_size:20
            CheckBox:
                group: "pizza"
                on_active: root.check_click(self, self.active,"pepperoni")
            Label:
                text:"cheese"
                font_size:20
            CheckBox:
                group: "pizza"
                on_active: root.check_click(self, self.active,"cheese")
            Label:
                text:"mushroom"
                font_size:20
            CheckBox:
                group: "pizza"
                on_active: root.check_click(self, self.active,"mushroom")
            
        Label:
            id:txt
            text:""
            font_size:30   
        

