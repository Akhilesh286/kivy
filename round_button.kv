<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size : root.width,root.height
        padding:50
        spacing:50
        Button:
            text:"Hello world"
        RoundedButton:
            text:"Goodbye world"
            pos_hint:{"center_x":.5}
            size_hint:(1,.3)
            on_press:print ("hello")
     
<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    
    canvas.before:
        Color:
            rgba:(42,0,255,1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            
            radius:[60]
       
        

