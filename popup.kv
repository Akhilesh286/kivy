#: import Factory kivy.factory.Factory
<MyPopup@Popup>
    auto_dismiss: True
    title:"press popup"
    size_hint:(0.6,0.2)
    pos_hint:{"x":0.2,"top":0.9}
    Button:
        text:"close me!"
        font_size:22
        on_release:root.dismiss()
<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height
        padding:20
        spacing:20
        Label:
            text:"popup stuff"
            font_size:32
        Button:
            text:"popup"
            font_size:32
            on_release:Factory.MyPopup().open()
            

